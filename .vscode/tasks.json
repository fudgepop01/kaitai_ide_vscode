// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      // Taken from: https://github.com/TypeStrong/ts-loader/issues/660#issuecomment-413664871
      "problemMatcher": [
        {
          "fileLocation": "absolute",
          "owner": "typescript",
          "pattern": [
            {
              "regexp": "\\[tsl\\] ERROR in (.*)?\\((\\d+),(\\d+)\\)",
              "file": 1,
              "line": 2,
              "column": 3
            },
            {
              "regexp": "\\s*TS\\d+:\\s*(.*)",
              "message": 1
            }
          ],
          "severity": "error",
          "source": "ts",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "webpack is watching the files..."
            },
            "endsPattern": {
              "regexp": "Built at\\:(.*)"
            }
          }
        },
        {
          "fileLocation": "relative",
          "owner": "typescript",
          "pattern": [
            {
              "regexp": "WARNING in (.*)",
              "file": 1
            },
            {
              "regexp": "Module Warning (.*)"
            },
            {
              "regexp": "\\[(\\d+), (\\d+)\\]: (.*)",
              "line": 1,
              "column": 2,
              "message": 3
            }
          ],
          "severity": "warning",
          "source": "tslint",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "webpack is watching the files..."
            },
            "endsPattern": {
              "regexp": "Built at\\:(.*)"
            }
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
