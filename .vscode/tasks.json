// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": [
        {
          "fileLocation": "relative",
          "owner": "esbuild",
          "pattern": [
            {
              "regexp": "^\\s*>\\s+(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5,
            }
          ],
          "severity": "warning",
          "source": "esbuild",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Build starting...",
            "endsPattern": "Build (completed|failed)",
          }
        },
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
