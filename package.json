{
  "name": "kaitai-struct-vscode",
  "displayName": "%displayName%",
  "description": "%description%",
  "repository": {
    "url": "https://github.com/fudgepop01/kaitai_ide_vscode"
  },
  "version": "0.8.0",
  "publisher": "fudgepops",
  "engines": {
    "node": ">=14",
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:kaitaiStructExplorer",
    "onWebviewPanel:fudgedit",
    "onLanguage:yaml"
  ],
  "main": "./dist/extension",
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": "*.ksy",
        "url": "https://raw.githubusercontent.com/kaitai-io/ksy_schema/master/ksy_schema.json"
      }
    ],
    "languages": [
      {
        "id": "yaml",
        "extensions": [
          ".ksy"
        ],
        "aliases": [
          "KSY-YAML"
        ]
      }
    ],
    "commands": [
      {
        "command": "kaitaiStruct.pickFileForHexEditor",
        "title": "%kaitaiStruct.pickFileForHexEditor.title%",
        "category": "KaitaiStruct",
        "icon": {
          "light": "./media/hex-light.svg",
          "dark": "./media/hex-dark.svg"
        }
      },
      {
        "command": "kaitaiStruct.openFileAsHex",
        "title": "%kaitaiStruct.openFileAsHex.title%",
        "category": "KaitaiStruct",
        "icon": {
          "light": "./media/hex-light.svg",
          "dark": "./media/hex-dark.svg"
        }
      },
      {
        "command": "kaitaiStruct.compileKsy",
        "title": "%kaitaiStruct.compileKsy.title%",
        "category": "KaitaiStruct",
        "icon": {
          "light": "./media/archive-light.svg",
          "dark": "./media/archive-dark.svg"
        }
      },
      {
        "command": "kaitaiStruct.compileAndExamine",
        "title": "%kaitaiStruct.compileAndExamine.title%",
        "category": "KaitaiStruct",
        "icon": {
          "light": "./media/archive-eye-light.svg",
          "dark": "./media/archive-eye-dark.svg"
        }
      },
      {
        "command": "kaitaiStruct.jumpToChunk",
        "title": "%kaitaiStruct.jumpToChunk.title%",
        "category": "KaitaiStruct",
        "icon": "$(symbol-structure)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "kaitaiStruct.openFileAsHex"
        },
        {
          "command": "kaitaiStruct.compileKsy",
          "when": "resourceExtname == .ksy"
        },
        {
          "command": "kaitaiStruct.compileAndExamine",
          "when": "resourceExtname == .ksy"
        }
      ],
      "editor/title": [
        {
          "command": "kaitaiStruct.pickFileForHexEditor",
          "group": "navigation",
          "when": "resourceExtname == .ksy && !kaitaiStruct.hasFileInHexEditor"
        },
        {
          "command": "kaitaiStruct.compileAndExamine",
          "group": "navigation",
          "when": "resourceExtname == .ksy && kaitaiStruct.hasFileInHexEditor"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "kaitaiStructExplorer",
          "name": "KSExplorer"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Kaitai Struct IDE",
      "order": 20,
      "properties": {
        "kaitaiStruct.trace": {
          "type": "string",
          "enum": [
            "off",
            "verbose"
          ],
          "default": "off",
          "description": "%kaitaiStruct.trace.desc%",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js",
    "watch": "npm run build -- --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run build && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/js-yaml": "^3.12.3",
    "@types/mocha": "^2.2.42",
    "@types/node": "^14",
    "chalk": "^4.1.2",
    "esbuild": "^0.13.12",
    "ts-loader": "^6.2.2",
    "typescript": "^2.6.1",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "fudgedit": "0.0.1",
    "glob": "^7.2.0",
    "iconv-lite": "^0.5.1",
    "js-yaml": "^3.13.1",
    "kaitai-struct": "^0.9.0",
    "kaitai-struct-compiler": "^0.9.0",
    "safer-eval": "^1.3.6",
    "vscode-nls": "^5.0.0"
  }
}
